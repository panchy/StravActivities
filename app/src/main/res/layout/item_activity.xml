<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="164dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardElevation="6dp"
    app:contentPadding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewActivityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Mock Activity Name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_size_medium" />

        <TextView
            android:id="@+id/textViewActivityCommute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewActivityName"
            android:text="@string/commute"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/font_size_small" />

        <LinearLayout
            android:id="@+id/activityTypeAndDistanceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/timeLayout"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewActivityType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mock Activity Type"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_size_medium_smaller" />

            <TextView
                android:id="@+id/textViewActivityDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Mock Distance"
                android:textSize="@dimen/font_size_medium_smaller" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewActivityElapsedTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Mock Time"
                android:textSize="@dimen/font_size_medium_smaller" />

            <TextView
                android:id="@+id/textViewActivityTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="0.6"
                android:gravity="end"
                android:text="15.05.2020 16:40"
                android:textSize="@dimen/font_size_small" />


        </LinearLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>